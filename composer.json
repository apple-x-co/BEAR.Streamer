{
     "name": "bear/middleware",
     "description": "BEAR.Resource stream responder",
     "keywords": [
          "PSR7",
          "Relay",
          "BEAR.Sunday"
     ],
     "license": "MIT",
     "autoload": {
          "psr-4": {
               "BEAR\\Streamer\\": "src/"
          }
     },
     "autoload-dev": {
          "psr-4": {
               "BEAR\\Streamer\\": [
                    "tests/Fake"
               ]
          }
     },
     "require-dev": {
          "phpunit/phpunit": "^6.2",
          "bear/sunday": "^1.2"
     },
     "scripts" :{
          "test": ["@cs", "phpunit"],
          "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
          "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
          "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"]
     }
}
